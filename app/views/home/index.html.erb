<form class="center" action="/payments" method="POST" id="payment-form">
  <div id='payment-form-container'>
    <span class="payment-errors"></span>
    <span class="payment-success"></span>

    <div class="form-row">
      <label>
        <span>Your Name</span>
        <input type="text" size="20" name="customer_name" data-stripe="name">
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Project Name</span>
        <input type="text" size="20" name="project_name">
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Amount USD</span>
        <input type="text" size="20" name="amount" data-stripe="amount">
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Billing Zipcode</span>
        <input type="text" size="20" name="zip_code" data-stripe="address_zip">
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Card Number</span>
        <input type="text" size="20" data-stripe="number">
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Expiration (MM/YY)</span>
        <input type="text" size="2" data-stripe="exp_month">
      </label>
      <span> / </span>
      <input type="text" size="2" data-stripe="exp_year">
    </div>

    <div class="form-row">
      <label>
        <span>CVC</span>
        <input type="text" size="4" data-stripe="cvc">
      </label>
    </div>

    <p class="payment-errors"></p>

    <input type="submit" class="submit" value="Submit Payment">
  </div>
</form>

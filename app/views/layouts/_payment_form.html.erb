<div class='payment-container'>
  <div class="close">
    <span>X</span>
  </div>
  <form class='modal' id="payment-form">
    <header class='header'>
      <div class='card-type'>
        <a class='card active'>
          <img src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/Amex.png'>
        </a>
        <a class='card'>
          <img src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/Discover.png'>
        </a>
        <a class='card'>
          <img src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/Visa.png'>
        </a>
        <a class='card'>
          <img src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/MC.png'>
        </a>
      </div>
    </header>
    <div class='content'>
      <div class='form'>

        <span class="payment-errors"></span>
        <span class="payment-success"></span>

        <div class='form-row'>
          <div class='input-group'>
            <input placeholder='Project Name' type='text' name="project_name">
          </div>
        </div>

        <div class='form-row'>
          <div class='input-group'>
            <input placeholder='Name on Card' type='text' name="customer_name" data-stripe="name">
          </div>
        </div>

        <div class='form-row'>
          <div class='input-group split-field-left'>
            <input placeholder='Amount' type='number' name="amount" data-stripe="amount">
          </div>

          <div class='input-group split-field-right'>
            <input placeholder='ZIP' maxlength='5' type='number' name="zip_code" data-stripe="address_zip">
          </div>
        </div>

        <div class='form-row'>
          <div class='input-group'>
            <input maxlength='16' placeholder='Card Number' type='number'>
          </div>
        </div>

        <div class='form-row'>
          <div class='input-group'>
            <input placeholder='Exp Date' type='month'>
          </div>

          <div class='input-group'>
            <input maxlength='4' placeholder='CVS' type='number'>
          </div>
        </div>

      </div>
    </div>
    <footer class='footer'>
      <button class='button'>Complete Payment</button>
    </footer>
  </form>
</div>
